{
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2021",
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "importHelpers": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./dist"]
}